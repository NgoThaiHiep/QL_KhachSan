	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		Object obj = e.getSource();
		
		
		if(obj.equals(btnClearnDV)) {
			clearn();
		}if(obj.equals(btnThem)) {
			them();
		}
		if(obj.equals(btnXoa)) {
			xoa() ;
		}
		
		if(obj.equals(btnSua)) {
			sua();
		}
		if(obj.equals(btnThoat)) {
			thoat() ;
		}
	}
	 private DichVu createform() {
	    	int maDV = Integer.parseInt(txtMaDichVu.getText());
	    	String tenDV = txtTenDichVu.getText();
	    	float giaDV = Float.parseFloat(txtGiaDichVu.getText());
	    	return new DichVu(maDV, tenDV, giaDV);
	    }
		public  boolean kiemTraDichVu() {
			String madv = txtMaDichVu.getText();
			String tendv = txtTenDichVu.getText();
			String gia = txtGiaDichVu.getText();
			
			//Mã Dịch vụ 
			if(madv.isEmpty())
			{
				JOptionPane.showMessageDialog(this, "Mã dịch vụ không để trống");
				txtMaDichVu.requestFocus();
				return false;
			}else if(madv.length()>0) 
			{
				
				try {
					int x = Integer.parseInt(madv);
					if(x<0)
					{
						JOptionPane.showMessageDialog(this, "ERR: Mã dịch vụ là số >=0");
						txtGiaDichVu.requestFocus();
						return false;
					} 
				} catch (NumberFormatException e) {
					JOptionPane.showMessageDialog(this, "Err: Mã dịch vụ Không được Là Chữ");
					txtMaDichVu.requestFocus();
					return false;
				}
			}
			//Tên Dịch vụ 
			if(tendv.isEmpty())
			{
				JOptionPane.showMessageDialog(this, "Tên dịch vụ không để trống");
				txtTenDichVu.requestFocus();
				return false;
			}else if(!madv.matches("[a-zA-Z0-9\\\\s]+")) //Tên Dịch vụ bao gồm chữ và số 
			{
			JOptionPane.showMessageDialog(this, "ERR:Tên Dịch vụ bao gồm chữ và số ");
				txtMaDichVu.requestFocus();
				return false;
			}
			if(gia.length() == 0){
				JOptionPane.showMessageDialog(this, "Giá không được rỗng");
				txtGiaDichVu.requestFocus();
				return false;
			}
			if(gia.length()>0) {
				try {
					float x = Float.parseFloat(gia);
					if(!(x >0)) {
						JOptionPane.showMessageDialog(this, "Giá phải lớn hơn 0");
						txtGiaDichVu.requestFocus();
						return false;
					}
				} catch (NumberFormatException e) {
					// TODO: handle exception
					JOptionPane.showMessageDialog(this, "Giá phải là chữ");
					txtGiaDichVu.requestFocus();
					return false;
				}
			}
			return true;
	}
	protected DichVu revertDichVuFromTextfields() {
		int madv = Integer.parseInt( txtMaDichVu.getText());
		String tendv = txtTenDichVu.getText();
		float giadv = Float.parseFloat(txtGiaDichVu.getText());
		return new DichVu(madv, tendv, giadv);
	}
	 
	 private void them() {
		 if(kiemTraDichVu()) {
			 ArrayList<DichVu> dsdv  = dichvu_dao.getAlltbDichVu();
			 DichVu dv =  createform();
			 if(!dsdv.contains(dv)) {
		         dichvu_dao.create(dv);
		         hienThiDanhSachDichVu() ;
			 }else
				 JOptionPane.showMessageDialog(this, "Trùng mã");
		 }
		 
      }
    private void xoa() {
    	String ma = txtMaDichVu.getText();  
    	dichvu_dao.DeleteNV(ma);
    	hienThiDanhSachDichVu() ;
         }
    private void sua() {
    	DichVu dv =  createform();
    	dichvu_dao.update(dv);
    	hienThiDanhSachDichVu() ;
        }
   
    private void thoat() {
      
    	 btnThoat.setToolTipText("Click để thoát chương trình ");
         int selected = JOptionPane.showConfirmDialog(this, "Bạn có chắc chắn muốn thoát chương"
             + " trình không", "Thông báo", JOptionPane.YES_NO_CANCEL_OPTION);
         if (selected == JOptionPane.YES_NO_OPTION) {
             this.dispose();

         }
    }

    private void clearn() {
        
    	txtMaDichVu.setText("");
        txtTenDichVu.setText("");
        txtGiaDichVu.setText("");
        txtMaDichVu.requestFocus();
        txtMaDichVu.setEditable(true);

   }
   
   
    private void jTableDichvuMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_jTableDichvuMouseClicked
        // TODO add your handling code here
        int i = jTableDichvu.getSelectedRow();
        TableModel model = jTableDichvu.getModel();
        txtMaDichVu.setText(model.getValueAt(i, 0).toString());
        txtTenDichVu.setText(model.getValueAt(i, 1).toString());
        txtGiaDichVu.setText(model.getValueAt(i, 2).toString());
        txtMaDichVu.setEditable(false);

    }

